<h1>Posts</h1>

<% @posts.each do |post| %>
  <div class="post">
  <h2><%= post.title %></h2>
  <% if user_signed_in? %>
    <p><small>By: <%= post.user.email %></small></p>
     <%= link_to 'Edit', edit_post_path(post)%>
   <%else%>
    <p><small>By: SECRET </small></p>
  <% end %>
  <p><%= post.body %></p>
  </div>
<% end %>
<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path%><br></br>
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete%>
<% else %>
  <%= button_to 'Sign In', new_user_session_path %>
<% end %>